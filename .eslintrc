{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },

  "ecmaFeatures": {
    "modules": 1
  },

  "rules": {
    // possible errors
    "no-console": 0,

    // best practice
    "no-alert": 0,
    "dot-notation": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-label": 2,
    "no-implicit-globals": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-labels": 2,
    "no-self-compare": 2,
    "no-unmodified-loop-condition": 2,
    "no-useless-call": 2,
    "no-void": 2,
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 2,

    // variables
    "no-shadow": 2,
    "no-catch-shadow": 2,
    "no-undefined": 2,
    "no-use-before-define": 2,

    // stylistic
    "array-bracket-spacing": [2, "never"],
    "block-spacing": [2, "never"],
    "brace-style": [2, "1tbs"],
    "comma-dangle": [2, {"arrays": "never","objects": "always"}],
    "indent": [2, 2],
    "jsx-quotes": [2, "prefer-single"],
    "key-spacing": 2,
    "keyword-spacing": 2,
    "max-len": [2, 120],
    "no-bitwise": 2,
    "no-continue": 2,
    "no-inline-comments": 2,
    "no-lonely-if": 2,
    "no-new-object": 2,
    "no-plusplus": 2,
    "no-whitespace-before-property": 2,
    "operator-assignment": [2, "always"],
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "semi": [2, "always"],
    "quote-props": [2, "as-needed"],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],

    //es6
    "no-duplicate-imports": 2,
    "no-var": 2,
    "prefer-const": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 2,
    "require-yield": 2,
  }
}
